@model WebAppDemo.Models.PhanLoaiSach

@{
	ViewBag.Title = "CreatePhanLoai";
}

<h4 style="margin:30px auto 30px 25%;">Thêm phân loại </h4>


@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal" style="background-color:#f8f9fa;">
		<form style="margin-top:50px;">
			<div class="form-row">
				<div class="form-group col-md-6" style="margin:0 auto;">
					@Html.LabelFor(model => model.Ma)

					@Html.EditorFor(model => model.Ma, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
				</div>
				<div class="form-group col-md-6" style="margin:0 auto;margin-top:10px;">
					@Html.LabelFor(model => model.TenPhanLoai)

					@Html.EditorFor(model => model.TenPhanLoai, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
				</div>
				<div class="form-group">
					<div class="form-check" style="margin-left:25%; margin-top:10px;">
						@Html.LabelFor(model => model.DaXoa, htmlAttributes: new { @class = "form-check-label" })
						@Html.EditorFor(model => model.DaXoa, new { htmlAttributes = new { @class = "form-check-input"  } })
					</div>
				</div>
				<div class="form-group col-md-6" style="margin:0 auto;margin-top:10px;">
					@Html.LabelFor(model => model.NgayTao)

					@Html.EditorFor(model => model.NgayTao, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
				</div>
				<div class="form-group col-md-6" style="margin:0 auto;margin-top:10px;">
					@Html.LabelFor(model => model.NguoiTao)

					@Html.EditorFor(model => model.NguoiTao, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
				</div>
			</div>


			<button type="submit" class="btn btn-primary" style="margin-left:25%;margin-top:30px;">Thêm mới</button>
		</form>


	</div>
}

<div>
	@Html.ActionLink("Quay Lại", "PhanLoai", new { htmlAttributes = new { @styte= "text-decoration-line:none" } })
</div>


