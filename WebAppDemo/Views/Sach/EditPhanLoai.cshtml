@model WebAppDemo.Models.PhanLoaiSach

@{
	ViewBag.Title = "EditPhanLoai";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Sửa phân loại</h4>


@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

<div class="form-horizontal" style="background-color:#f8f9fa;">
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	<form style="margin-top:50px;">
		<div class="form-row">
			<div class="form-group col-md-6" style="margin:0 auto;">
				@Html.LabelFor(model => model.Ma)

				@Html.EditorFor(model => model.Ma, new { htmlAttributes = new {@class = "form-control"}})
			</div>
			<div class="form-group col-md-6" style="margin:0 auto;margin-top:10px;">
				@Html.LabelFor(model => model.TenPhanLoai)

				@Html.EditorFor(model => model.TenPhanLoai, new { htmlAttributes = new {@class = "form-control"}})
			</div>
			<div class="form-group">
				<div class="form-check" style="margin-left:25%; margin-top:10px;">
					@Html.LabelFor(model => model.DaXoa, htmlAttributes: new { @class = "form-check-label" })
					@Html.EditorFor(model => model.DaXoa, new { htmlAttributes = new { @class = "form-check-input" } })
				</div>
			</div>
			<div class="form-group col-md-6" style="margin:0 auto;margin-top:10px;">
				@Html.LabelFor(model => model.NgayTao)

				@Html.EditorFor(model => model.NgayTao, new { htmlAttributes = new {@class = "form-control"}})
			</div>
			<div class="form-group col-md-6" style="margin:0 auto;margin-top:10px;">
				@Html.LabelFor(model => model.NguoiTao)

				@Html.EditorFor(model => model.NguoiTao, new { htmlAttributes = new {@class = "form-control"}})
			</div>
			<div class="form-group col-md-6" style="margin:0 auto;margin-top:10px;">
				@Html.LabelFor(model => model.NguoiSua)

				@Html.EditorFor(model => model.NguoiSua, new { htmlAttributes = new {@class = "form-control"}})
			</div>
			<div class="form-group col-md-6" style="margin:0 auto;margin-top:10px;">
				@Html.LabelFor(model => model.NgaySua)

				@Html.EditorFor(model => model.NgaySua, new { htmlAttributes = new {@class = "form-control"}})
			</div>
		</div>


		<button type="submit" class="btn btn-primary" style="margin-left:25%;margin-top:30px;">Cập nhật</button>
	</form>


</div>
}

<div>
	@Html.ActionLink("Quay lại", "PhanLoai")
</div>

