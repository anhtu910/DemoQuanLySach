@model WebAppDemo.Models.PhanLoaiSach

@{
	ViewBag.Title = "RestorePhanLoai";
}

<h4>Khôi phục phân loại</h4>

@Styles.Render("~/Content/css")s
@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>PhanLoaiSach</h4>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		@Html.HiddenFor(model => model.Ma)

		<div class="form-group">
			@Html.LabelFor(model => model.TenPhanLoai, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				<label style="margin-top:7px;">@Model.TenPhanLoai</label>
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.DaXoa, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				<div class="checkbox">
					@Html.EditorFor(model => model.DaXoa)
					@Html.ValidationMessageFor(model => model.DaXoa, "", new { @class = "text-danger" })
				</div>
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.NgayTao, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				<label style="margin-top:7px;">@Model.NgayTao</label>
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.NguoiTao, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				<label style="margin-top:8px;">@Model.NguoiTao</label>
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.NguoiSua, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				<label style="margin-top:8px;">@Model.NguoiSua</label>
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.NgayXoa, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				<label style="margin-top:8px;">@Model.NgayXoa</label>
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.NguoiXoa, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				<label style="margin-top:8px;">@Model.NguoiXoa</label>
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Restore" class="btn btn-default" />
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Quay lại", "Index")
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
