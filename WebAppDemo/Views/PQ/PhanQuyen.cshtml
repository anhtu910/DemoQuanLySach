@model IEnumerable<WebAppDemo.Models.User>

@{
    ViewBag.Title = "PhanQuyen";

}

<h4 style="margin:10px 0 10px 0;">Phân quyền</h4>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.passwordd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fullname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UsersGroup.GroupName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.passwordd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fullname)
      
        <td>
            @Html.DisplayFor(modelItem => item.UsersGroup.GroupName)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditPQ", new { id=item.Username })
          
        </td>
    </tr>
}

</table>
